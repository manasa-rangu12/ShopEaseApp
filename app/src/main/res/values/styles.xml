<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>
    </style>
    <style name="BottomNavActiveText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/active_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavInactiveText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/inactive_color</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>